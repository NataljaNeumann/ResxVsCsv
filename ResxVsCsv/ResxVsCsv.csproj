    <FileVersion>1.1.0.0</FileVersion>
    <Version>$(AssemblyVersion)</Version>
    <ProduceReferenceAssembly>False</ProduceReferenceAssembly>
    <Copyright>Copyright © 2025 NataljaNeumann@gmx.de</Copyright>
    <Description>Transforms a set of .resx files to a .csv file and updates .resx files</Description>
  </PropertyGroup>

