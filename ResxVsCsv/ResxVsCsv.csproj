&quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\$(ProjectName)\Properties\&quot;&#xD;&#xA;  copy /Y &quot;$(ProjectDir)Properties\*.settings&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\$(ProjectName)\Properties\&quot;&#xD;&#xA;  cd /D &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ&quot;&#xD;&#xA;  tar.exe -cf &quot;..\source_code.tar&quot; *.*&#xD;&#xA;  cd ..&#xD;&#xA;  tar.exe -a -c -f source_code.tar.zip source_code.tar&#xD;&#xA;  del /Q source_code.tar&#xD;&#xA;  cd /D &quot;$(TargetDir)&quot;&#xD;&#xA;  del /F /S /Q ZZ_SOURCE_CODE_ZZ&#xD;&#xA;  rmdir /S /Q ZZ_SOURCE_CODE_ZZ&#xD;&#xA;  del /Q &quot;*.pdb&quot;&#xD;&#xA;  tar.exe -a -c -f ..\..\$(ProjectName)_v$(AssemblyVersion).zip *.*&#xD;&#xA;)" />
  </Target>

  <ItemGroup>
